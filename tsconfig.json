{
  "compilerOptions": {
    "target": "es5",
    "downlevelIteration": true,
    "module": "ES2015",
    "moduleResolution": "node",
    "declaration": true,
    "lib": [
      "es5",
      "es6",
      "es2015.collection",
      "dom"
    ],
    "noImplicitAny": false,
    "noEmitOnError": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "noResolve": true,
  },
  "exclude": [
    "node_modules",
    "demo",
    "**/*.spec.ts",
    "lib",
  ],
  "include": [
    "src",
  ]
}